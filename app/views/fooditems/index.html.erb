<div>
  <div>
    <h1>
      List of Foods
    </h1>
  </div>
</div>

<hr>


<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Food Group
        </th>

        <th>
          Food Item
        </th>

        <th>
          Portion Size
        </th>

      </tr>

      <% @list_of_fooditems.each do |a_fooditem| %>
      <tr>
      
        <td>
          <%= a_fooditem.food_group_name %>
        </td>

        <td>
          <%= a_fooditem.food_item_name %>
        </td>

        <td>
          <%= a_fooditem.portion_size %>
        </td>
        
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
