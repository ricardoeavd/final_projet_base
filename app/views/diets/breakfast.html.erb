<h1>My Breakfast</h1>

<hr>
<div>
  <div>
    <table border="1">
      <tr>

        <th>
          Meal
        </th>

        <th>
          Food Group
        </th>

        <th>
          Number of Portions
        </th>

        <th>
          Food Item
        </th>

        <th>
          
        </th>

      </tr>

      <% @list_of_diets.each do |a_diet| %>

      <form action="/insert_meal" method="post">
        <input type="hidden" value ="Breakfast" id="meal_name_box" name="query_meal_name" class="form-control">
        <input type="hidden" value =" <%= a_diet.food_group_name %>" id="food_group_name_box" name="query_food_group_name" class="form-control">
        <input type="hidden" value ="<%= a_diet.portions %>" id="portions_box" name="query_portions" class="form-control">

      <tr>

        <td>
          Breakfast
        </td>
     
       <td>
          <%= a_diet.food_group_name %>
        </td>

        <td>
          <%= a_diet.portions %>
        </td>

        <td>
          <label for="query_food_item_name"></label>

            <select name="query_food_item_name" id="food_item_name_box">
            <% Fooditem.where(:food_group_name => a_diet.food_group_name).each do |a_food_item| %>
              <option value="<%= a_food_item.food_item_name%>"><%= a_food_item.food_item_name%> - <%= a_food_item.portion_size%>>
              </option>
            <% end %>
            </select>
        </td>
         
        <td>
          <button>
            Record Meal Log
          </button>
        </td>
       </form>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<p></p>

<div>
  <div>
    <form action="/insert_meal" method="post">

      <div>
        <label for="meal_name_box">
          Meal
        </label>

        <input type="text" id="meal_name_box" name="query_meal_name">
      </div>

      <div>
        <label for="food_group_name_box">
          Food Group
        </label>

        <input type="text" id="food_group_name_box" name="query_food_group_name">
      </div>

      <div>
        <label for="portions_box">
          Number of Portions
        </label>

        <input type="text" id="portions_box" name="query_portions">
      </div>

      <div>
        <label for="food_item_name_box">
          Food Item
        </label>

        <input type="text" id="food_item_name_box" name="query_food_item_name">
      </div>

      <div>
        <label for="portion_size_box">
          Portion Size
        </label>

        <input type="text" id="portion_size_box" name="query_portion_size">
      </div>


       <button>
        Record your meal
      </button>
    </form>
  </div>
</div>

<hr>