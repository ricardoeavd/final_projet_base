<div>
  <div>
    <h1>
      My Diet Plan
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new diet item
    </h2>

    <form action="/insert_diet" method="post">
      <div>
        <label for="meal_name_box">
          Meal name
        </label>

        <input type="text" id="meal_name_box" name="query_meal_name">
      </div>

      <div>
        <label for="food_group_id_box">
          Food group (Id)
        </label>

        <input type="text" id="food_group_id_box" name="query_food_group_id">
      </div>

      <div>
        <label for="portions_box">
          Number of portions
        </label>

        <input type="text" id="portions_box" name="query_portions">
      </div>

      <button>
        Add diet item
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        
        <th>
          Meal
        </th>

        <th>
          Food Group Id
        </th>

        <th>
          Food Group Name
        </th>

        <th>
          Number of Portions
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_diets.each do |a_diet| %>
      <tr>
     
        <td>
          <%= a_diet.meal_name %>
        </td>

        <td>
          <%= a_diet.food_group_id %>
        </td>

        <td>
          <%#= a_diet.food_group_name %>
        </td>

        <td>
          <%= a_diet.portions %>
        </td>

        <td>
          <a href="/delete_diet/<%= a_diet.id %>">
            Delete this diet item
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
